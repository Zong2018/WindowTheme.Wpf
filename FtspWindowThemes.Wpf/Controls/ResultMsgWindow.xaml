<Window x:Class="WindowThemes.Wpf.Controls.ResultMsgWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowThemes.Wpf.Controls"
             mc:Ignorable="d" 
        Title="ResultMsgWindow" Width="220" Height="100" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded" ShowInTaskbar="False">

    <Border Background="#000000" Opacity="0.7" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Height="Auto" CornerRadius="4" Padding="30,15,30,15">
        <Grid MinHeight="20" MinWidth="100">
            <TextBlock x:Name="txtTip" FontSize="14" HorizontalAlignment="Center" TextWrapping="Wrap"  Text="" 
                   Foreground="White" VerticalAlignment="Center" MaxWidth="220"/>
        </Grid>
    </Border>
</Window>